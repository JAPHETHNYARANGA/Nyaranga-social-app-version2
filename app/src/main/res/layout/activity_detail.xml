<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="30dp" >
      <TextView
          android:id="@+id/hello"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hello"
          android:textColor="#CA582E"
          android:textSize="20dp" />
      <TextView
          android:layout_below="@+id/hello"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Japheth Nyaranga"
          android:textColor="#CA582E"
          android:textSize="26dp"
          android:layout_marginTop="10dp"
          android:textStyle="bold"/>
      <Button
          android:id="@+id/search_repo"
          android:layout_width="100dp"
          android:layout_height="50dp"
          android:layout_alignParentRight="true"
          android:background="@drawable/ic_launcher_background"
          android:text="Search Repository"
          android:textSize="10dp"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="100dp"
          android:id="@+id/r1">

          
      </RelativeLayout>
  </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:padding="2dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backend"
                android:textSize="25dp"
                android:textColor="#d703082b"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 courses"
                android:textSize="14dp"
                android:textColor="#ab03082b"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:padding="2dp"
                android:src="@drawable/ic_launcher_background"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FrontEnd"
                android:textSize="25dp"
                android:textColor="#d703082b"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 courses"
                android:textSize="14dp"
                android:textColor="#ab03082b"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About App"
            android:textColor="#03082b"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="23dp"/>




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="@string/about_app"
            android:textColor="#03082b"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
             />


    </RelativeLayout>

</LinearLayout>